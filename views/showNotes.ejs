<div class="container">
      <h1>Notes</h1>
      <br>
      <div class="card-columns">
        <% notes.forEach(note => {%>

          <div class="card bg-info" style="width:40rem;">
            <div class="card body">
              <h5 class="card-title">By <%= note.author %> </h5>
              <h6 class="card-subtitle mb-2 text-muted">Created at <%= note.createdAt %></h6>
              <p class="card-text"> <%= note.subject %> <%= note.courseID %> <%= note.section %> <%= note.term %> </p>
              <p class="card-text"><%= note.note%></p>
                <% if (note.authorID.equals(user._id)){ %>
                  [<a href="/editNote/<%= note._id %>" class="card-link">Edit</a>]
                  [<a href="/remove/<%= note.subject %>/<%= note.courseID %>/<%=
                      note.section %>/<%= note.term%>/<%= note._id %>" class="card-link">Delete</a>]
                <% } %>
                  [<a href="/rating/<%= note._id %>" class="card-link">Comment & Rating</a>]
                  [<a href="mailto:<%= note.authorEmail %>">Email the author</a>]
                  [<a href="/showNoteInfo/<%= note._id %>">View details</a>]
            </div>
          </div>
          <br>
          <br><br>
        <% }) %>
                </div>
</div>
