<div class="container">
  <div class="col-sm-6">
    <img src="images/Sharing.jpg" alt="">
  </div>
  <div class="col-sm-6">
    <h2>Add your notes and share them with other students!</h2>
    <p>Type/Upload your notes for
    <%= note.subject %> <%= note.courseID %> <%= note.section %> <%= note.term %> </p>

    <form action="/editNote/<%=note._id%>" method="post">
     <input type="hidden" name="subject" value="<%= note.subject %>">
     <input type="hidden" name="courseID" value="<%= note.courseID %>">
     <input type="hidden" name="section" value="<%= note.section %>">
     <input type="hidden" name="term" value="<%= note.term %>">


     <hr>
     <h3>Your Notes</h3>
     <textarea name="note" rows="5" cols="40"><%= note.note %></textarea>
     <br>
     <br>

     <!-- file including photos, pdf, or any type-->
     <!--<label for="note"><h4>Notes</h4></label>
     <input type="file" class="form-control-file" name="file" value="">
     <hr>-->
     <br>
     <input class="button" type="submit" value="Submit your notes">
     <br>
    </form>
  </div>
</div>
